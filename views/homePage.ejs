  "
>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="center-text">
          <h1 class="big-text">Manajemen<br />Perpustakaan</h1>
          <h2>Khazanah Ilmu Pengetahuan</h2>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <div class="center-text center-btn">
          <a href="/loginAdmin" class="btn btn-warning btn-lg">Login</a>
          <!-- <a href="/signupAdmin" class="btn btn-light btn-light-home btn-lg"
            >Sign Up</a
          > -->
        </div>
      </div>
    </div>
  </div>
  <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
    // Function to remove flash messages after 4 seconds
    setTimeout(function() {
      var successMessage = document.getElementById('successMessage');
      if (successMessage) {
        successMessage.remove();
      }
      var errorMessage = document.getElementById('errorMessage');
      if (errorMessage) {
        errorMessage.remove();
      }
    }, 4000);
  </script>
  <script>
    // Fungsi logout
    function logout() {
        fetch('/logout', {
            method: 'GET',
            credentials: 'same-origin' // Untuk mengirim kredensial (session) dalam request
        })
        .then(response => {
            window.location.href = "/loginAdmin";
        })
        .catch(error => {
            console.error('Error saat logout:', error);
        });
    }
</script>

  </body>
</html>
