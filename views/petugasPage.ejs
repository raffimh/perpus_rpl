<%- include('includes/head.ejs') %>

<body
  style="
    background-image: url('img/bg-user.png');
    background-size: cover;
    background-position: bottom center;
    background-attachment: fixed;
  "
>
  <% if (success && success.length > 0) { %>
  <div id="successMessage" class="alert alert-success" role="alert">
    <%= success %>
  </div>
  <% } %> <% if (error && error.length > 0) { %>
  <div id="errorMessage" class="alert alert-danger" role="alert">
    <%= error %>
  </div>
  <% } %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-4">
        <div class="text-black text-center p-4">
          <h3 class="user-name">HALLO Librarian !</h3>
        </div>
      </div>
      <div class="col-4"></div>
      <div class="col-4">
        <div class="text-center p-4">
          <form
            class="d-flex mt-1"
            id="searchForm"
            action="/searchBook"
            method="GET"
          >
            <div class="input-group">
              <button
                class="btn btn-light btn-light-transparant"
                type="submit"
                id="searchButton"
              >
                <i class="fas fa-search icon-orange"></i>
              </button>
              <input
                class="form-control"
                type="search"
                placeholder="Pencarian Buku"
                aria-label="Search"
                name="searchQuery"
                id="searchQueryInput"
                autocomplete="off"
              />
            </div>
          </form>

          <div id="searchResults"></div>
        </div>
      </div>
    </div>
  </div>

  <div class="container col-6 center-container-user">
    <div class="row">
      <div class="col center-text">
        <a href="/addPeminjaman" class="link-unstyled">
          <img
            src="img/peminjaman.png"
            class="img-fluid"
            style="width: 150px; height: 150px"
            alt="Gambar 1"
          />
          <h4 class="bold-userpage">PEMINJAMAN <br />BUKU</h4>
        </a>
      </div>
      <div class="col center-text">
        <a href="/addBook" class="link-unstyled">
          <img
            src="img/buku.png"
            class="img-fluid"
            style="width: 150px; height: 150px"
            alt="Gambar 2"
          />
          <h4 class="bold-userpage">BUKU</h4></a
        >
      </div>
    </div>
    <div class="row mt-4">
      <div class="col center-text">
        <a href="/addAnggota" class="link-unstyled">
          <img
            src="img/anggota.png"
            class="img-fluid"
            style="width: 150px; height: 150px"
            alt="Gambar 3"
          />
          <h4 class="bold-userpage">ANGGOTA</h4></a
        >
      </div>
      <% if (user && user.role === 'admin') { %>
      <div class="col center-text">
        <a href="/addMember" class="link-unstyled">
          <img
            src="img/petugas.png"
            class="img-fluid"
            style="width: 150px; height: 150px"
            alt="Gambar 4"
          />
          <h4 class="bold-userpage">PETUGAS <br />PERPUSTAKAAN</h4></a
        >
      </div>
      <% } %>
    </div>
  </div>

  <%- include('includes/end.ejs') %>
</body>
